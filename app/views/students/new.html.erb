<h1 align="center">Signup for RegSystem</h1>

    <div class='row'>

        <div class='col-xs-12'>

            <%= form_for(@student, :html => {class: "form-horizontal", role: "form"}) do |f| %>

                <div class="form-group">

                    <div class="control-label col-sm-2">

                        <%= f.label :Username %>

                    </div>

                    <div class="col-sm-8">

                        <%= f.text_field :USERNAME, class: "form-control", placeholder: "Enter Username", autofocus: true %>

                    </div>

                </div>

                <div class="form-group">

                    <div class="control-label col-sm-2">

                        <%= f.label :email %>

                    </div>

                    <div class="col-sm-8">

                        <%= f.email_field :EMAIL, class: "form-control", placeholder: "Enter email" %>

                    </div>

                </div>

                <div class="form-group">

                    <div class="control-label col-sm-2">

                        <%= f.label :password %>

                    </div>

                    <div class="col-sm-8">

                        <%= f.password_field :PASSWORD, class: "form-control", placeholder: "Enter password" %>

                    </div>

                </div>

                <div class="form-group">

                    <div class="col-sm-offset-2 col-sm-10">

                        <%= f.submit "Sign up", class: 'btn btn-primary btn-lg' %>

                    </div>

                </div>

                <% end %>

        </div>

    </div>