<h1 align="center">Add new Course</h1>

<div class='row'>

    <div class='col-xs-12'>

        <%= form_for(@course, :html => {class: "form-horizontal", role: "form"}) do |f| %>

            <div class="form-group">

                <div class="control-label col-sm-2">

                    <%= f.label :name %>

                </div>

                <div class="col-sm-8">

                    <%= f.text_field :COURSE_NAME, class: "form-control", placeholder: "Enter Course name", autofocus: true %>

                </div>

            </div>

            <div class="form-group">

                <div class="control-label col-sm-2">

                    <%= f.label :desc %>

                </div>

                <div class="col-sm-8">

                    <%= f.text_field :COURSE_DESC, class: "form-control", placeholder: "Enter Course desc" %>

                </div>

            </div>
            <div class="form-group">

                <div class="control-label col-sm-2">

                    <%= f.label :Instructor %>

                </div>

                <div class="col-sm-8">

                    <%= f.text_field :INSTRUCTOR_NAME, class: "form-control", placeholder: "Enter Instructor name" %>

                </div>

            </div>

            <div class="form-group">

                <div class="control-label col-sm-2">

                    <%= f.label :Credit_hours %>

                </div>

                <div class="col-sm-8">

                    <%= f.number_field :CREDIT_HOURS, class: "form-control", placeholder: "Enter number of credit hours" %>

                </div>

            </div>
            <div class="form-group">

                <div class="control-label col-sm-2">

                    <%= f.label :Department_id %>

                </div>

                <div class="col-sm-8">

                    <%= f.number_field :Department_ID, class: "form-control", placeholder: "Enter Department id" %>

                </div>

            </div>
            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown">Help for Department ID
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu">
                    <% @departments.each do |s| %>
                        <li>
                            <%= s[1]%> has an id of <%=s[0]%>
                        </li>
                        <% end %>
                </ul>
            </div>

            <div class="form-group">

                <div class="col-sm-offset-2 col-sm-10">

                    <%= f.submit "Add Course", class: 'btn btn-primary btn-lg' %>

                </div>

            </div>

            <% end %>

    </div>

</div>