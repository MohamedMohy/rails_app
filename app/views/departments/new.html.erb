<h1 align="center">Add new department</h1>

    <div class='row'>

        <div class='col-xs-12'>

            <%= form_for(@department, :html => {class: "form-horizontal", role: "form"}) do |f| %>

                <div class="form-group">

                    <div class="control-label col-sm-2">

                        <%= f.label :DEPARTMENT_NAME %>

                    </div>

                    <div class="col-sm-8">

                        <%= f.text_field :DEPARTMENT_NAME, class: "form-control", placeholder: "Enter department name", autofocus: true %>

                    </div>

                </div>

                <div class="form-group">

                    <div class="control-label col-sm-2">

                        <%= f.label :DEPARTMENT_DESC %>

                    </div>

                    <div class="col-sm-8">

                        <%= f.text_field :DEPARTMENT_DESC, class: "form-control", placeholder: "Enter department desc" %>

                    </div>

                </div>

                <div class="form-group">

                    <div class="col-sm-offset-2 col-sm-10">

                        <%= f.submit "Confirm", class: 'btn btn-primary btn-lg' %>

                    </div>

                </div>

                <% end %>

        </div>

    </div>