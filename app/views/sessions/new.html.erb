<h1>Log in</h1>

<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :USERNAME %><br />
    <%= text_field_tag :USERNAME, params[:USERNAME] %>
  </p>
  <p>
    <%= label_tag :PASSWORD %><br />
    <%= password_field_tag :PASSWORD %>
  </p>
  <p class="button"><%= submit_tag "Log in" %></p>
<% end %>